<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="1dp">

    <TextView
        android:id="@+id/sd_tvRouteName"
        style="@style/RouteNameShort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_weight="0"
        android:padding="4dp"
        android:text="@string/placeholder_route_name" />

    <TextView
        android:id="@+id/sd_tvHeadsign"
        style="@style/SingleDepartureText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_weight="1"
        android:text="@string/placeholder_route_destination" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal"
        android:padding="4dp">

        <TextView
            android:id="@+id/sd_tvDepartureScheduled"
            style="@style/SingleDepartureText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/placeholder_scheduled_departure" />

        <TextView
            android:id="@+id/sd_tvDepartureRealtime"
            style="@style/SingleDepartureText"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:text="@string/placeholder_realtime_departure" />
    </LinearLayout>
</LinearLayout>